<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nikunjpc.quiznewsapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".News.NewsHistory.NewsHistory"
            android:screenOrientation="locked"
            android:label="News Searched History"/>
        <activity
            android:name=".TipOfTheDay.Tip"
            android:label="Tip Of The Day"
            android:screenOrientation="locked" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".News.Detailed"
            android:screenOrientation="locked"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".History.HistoryActivity"
            android:label="Quiz History"
            android:screenOrientation="locked" />
        <activity
            android:name=".News.NewsMainActivity"
            android:screenOrientation="locked"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".QuizResult"
            android:noHistory="true"
            android:screenOrientation="locked"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".QuizQuestion"
            android:noHistory="true"
            android:screenOrientation="locked"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:label="Quiz News App"
            android:screenOrientation="locked">
        </activity>
    </application>

</manifest>